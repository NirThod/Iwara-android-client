<?xml version="1.0" encoding="utf-8"?>
<com.zhkrb.iwara.custom.CutCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    app:cardBackgroundColor="@color/secondaryLight"
    app:CutElevation="@dimen/elevation_2dp"
    app:cardCornerRadius="0dp"
    android:background="@android:color/transparent"
    app:BottomRightCut="true"
    app:BottomRightRadius="15dp"
    app:CutForeground="@drawable/ripple_click"
    android:focusable="true"
    android:stateListAnimator="@animator/card_button_floating_anim"
    android:clipChildren="true"
    android:clipToPadding="true"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:paddingBottom="4dp"
        >

        <com.zhkrb.iwara.custom.RateImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/thumb"
            app:rate="0.68"
            android:scaleType="center"
            android:background="@null"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:background="@drawable/bg_video_title_shadow"
            app:layout_constraintStart_toStartOf="@id/thumb"
            app:layout_constraintEnd_toEndOf="@id/thumb"
            app:layout_constraintBottom_toBottomOf="@id/thumb"
            android:id="@+id/shadow"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/view"
            android:textColor="@color/textColor"
            android:layout_gravity="center_vertical"
            android:textAlignment="center"
            android:textSize="14sp"
            android:background="@null"
            app:layout_constraintStart_toStartOf="@id/thumb"
            app:layout_constraintTop_toTopOf="@id/shadow"
            app:layout_constraintBottom_toBottomOf="@id/shadow"
            android:layout_marginStart="8dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/like"
            android:textColor="@color/textColor"
            android:layout_gravity="center_vertical"
            android:textAlignment="center"
            android:textSize="14sp"
            android:layout_marginEnd="5dp"
            android:background="@null"
            app:layout_constraintEnd_toStartOf="@id/heart"
            app:layout_constraintTop_toTopOf="@id/shadow"
            app:layout_constraintBottom_toBottomOf="@id/shadow"
            />
        <ImageView
            android:id="@+id/heart"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:scaleType="center"
            android:src="@drawable/ic_favorite_black_24dp"
            android:tint="@color/textColor"
            android:layout_gravity="center_vertical"
            android:background="@null"
            app:layout_constraintEnd_toEndOf="@id/shadow"
            app:layout_constraintTop_toTopOf="@id/shadow"
            app:layout_constraintBottom_toBottomOf="@id/shadow"
            android:layout_marginEnd="8dp"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/user"
            android:textSize="12sp"
            android:textColor="@color/textColor_black_medium"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="3dp"
            android:gravity="center_vertical"
            android:background="@null"
            app:layout_constraintTop_toBottomOf="@id/thumb"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_goneMarginTop="4dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="@color/textColor_black"
            android:gravity="center_vertical"
            android:textSize="@dimen/subtitle2"
            android:id="@+id/title"
            android:lineSpacingExtra="3dp"
            android:background="@null"
            app:layout_constraintTop_toBottomOf="@id/user"
            app:layout_constraintStart_toStartOf="@id/user"
            app:layout_constraintEnd_toEndOf="@id/user"
            />




    </androidx.constraintlayout.widget.ConstraintLayout>
</com.zhkrb.iwara.custom.CutCardView>
