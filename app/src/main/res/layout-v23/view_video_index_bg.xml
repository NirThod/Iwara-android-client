<?xml version="1.0" encoding="utf-8"?>
<com.zhkrb.iwara.custom.CutCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:BottomRightCut="true"
    app:BottomRightRadius="20dp"
    app:CutForeground="@drawable/ripple_click"
    app:cardBackgroundColor="@color/secondaryLight"
    app:CutElevation="2dp"
    android:clickable="true"
    app:cardCornerRadius="0dp"
    android:clipChildren="true"
    android:clipToPadding="true"
    android:focusable="true">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="4dp"
        >

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="200dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:id="@+id/thumb"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="@color/textColor_black"
            android:textSize="16sp"
            android:id="@+id/title"
            android:lineSpacingExtra="2dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/thumb"
            android:layout_marginTop="4dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/user"
            android:textSize="14sp"
            android:textColor="@color/textColor_black_medium"
            android:layout_gravity="center_vertical"
            app:layout_constraintStart_toStartOf="@id/title"
            app:layout_constraintEnd_toStartOf="@id/view"
            app:layout_constraintTop_toBottomOf="@id/title"
            android:layout_marginTop="4dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="14sp"
            android:textColor="@color/textColor_black_medium"
            android:layout_gravity="center_vertical"
            android:id="@+id/view"
            app:layout_constraintStart_toEndOf="@id/user"
            app:layout_constraintEnd_toStartOf="@id/like"
            app:layout_constraintTop_toTopOf="@id/user"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="14sp"
            android:textColor="@color/textColor_black_medium"
            android:layout_gravity="center_vertical"
            android:id="@+id/like"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="4dp"
            app:layout_constraintStart_toEndOf="@id/view"
            app:layout_constraintEnd_toStartOf="@id/heart"
            app:layout_constraintTop_toTopOf="@id/user"
            />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:scaleType="center"
            android:src="@drawable/ic_favorite_black_24dp"
            android:id="@+id/heart"
            app:layout_constraintStart_toEndOf="@id/like"
            app:layout_constraintEnd_toEndOf="@id/title"
            app:layout_constraintTop_toTopOf="@id/user"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.zhkrb.iwara.custom.CutCardView>