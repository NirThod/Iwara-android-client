<?xml version="1.0" encoding="utf-8"?>
<com.zhkrb.dragvideo.widget.CutCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:AllCut="true"
    app:AllCutRadius="@dimen/cut_12dp"
    app:CutElevation="@dimen/elevation_4dp"
    android:layout_gravity="center"
    app:cardBackgroundColor="@color/textColor"
    app:cardCornerRadius="0dp"
    android:background="@android:color/transparent"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="230dp"
        android:minHeight="70dp"
        android:background="@android:color/transparent"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="10dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="300dp"
            android:textSize="16sp"
            android:textColor="@color/textColor_black"
            android:id="@+id/message"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cancel_button"
            android:layout_alignBaseline="@id/confirm_button"
            android:layout_toStartOf="@id/confirm_button"
            android:layout_marginEnd="10dp"
            android:textSize="16sp"
            android:textColor="@color/textColor_black_medium"
            android:textAlignment="center"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="@drawable/ripple_click_pople"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/confirm_button"
            android:layout_below="@id/message"
            android:layout_marginTop="15dp"
            android:layout_alignEnd="@id/message"
            android:textColor="@color/colorAccent"
            android:textSize="16sp"
            android:textAlignment="center"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="@drawable/ripple_click_pople"
            />


    </RelativeLayout>




</com.zhkrb.dragvideo.widget.CutCardView>